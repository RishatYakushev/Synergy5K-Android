<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AuthScreen_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="AuthScreen_TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SimpleRed_MaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gradient_text_1</item>
    </style>

    <style name="SimpleBlue_MaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gradient_text_0</item>
    </style>

    <style name="Gradient_TextView" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Gradient_Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Subtitle_TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="Profile_Card">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="Profile_Small_Card_Layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_percent">0.33</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Profile_Small_Card" parent="Profile_Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Profile_Small_Card_Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Profile_Small_Constraint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Profile_Card_Layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">9:5</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Profile_Edit_Title">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Profile_Edit_Subtitle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Profile_Edit_Divider">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="Ratingbar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/unactive_menu</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
